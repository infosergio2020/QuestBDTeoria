                                if(pregunta.opciones.length == 0)
                                    input.form-control(type='text' name="opcion_4" placeholder="opcion_4")
                                else
                                    if(pregunta.opciones[3].frase =='')
                                        input.form-control(type='text' name="opcion_4" value=pregunta.opciones[3].frase class="border border-3 border-danger")
                                    else
                                        input.form-control(type='text' name="opcion_4" value=pregunta.opciones[3].frase)
