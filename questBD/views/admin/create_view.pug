                            .mb-3.input-group
                                if(pregunta.opciones.length == 0)
                                    input.form-control(type='text' name="opcion_3" placeholder="opcion_3")
                                else
                                    if(pregunta.opciones[2].frase =='')
                                        input.form-control(type='text' name="opcion_3" value=pregunta.opciones[2].frase class="border border-3 border-danger")
